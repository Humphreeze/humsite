<div class="login">
    <h2>LOG-IN</h2>

    <form action="/login" , method="POST">
        <div>
            <label for="email">EMAIL</label>
            <input type="email" name="email" id="email">
        </div>
    
        <div>
            <label for="password">PASSWORD</label>
            <input type="text" name="password" , id="password">
        </div>
    
        <button>LOGIN</button>

    </form>
</div>